{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current test file",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "env": {
        "NODE_ENV": "testing"
      },
      "args": [
        "--timeout", "999999",
        "--colors",
        "--require", "ts-node/register",
        "--require", "source-map-support/register",
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
